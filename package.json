{
  "name": "web_messenger",
  "version": "1.0.0",
  "description": "The Web Messenger with minimum of connected libraries",
  "scripts": {
    "start": "npm run build && node ./server.js",
    "dev": "npm run build && webpack serve --open",
    "build": "webpack",
    "stylelint": "npx stylelint '**/*.scss'",
    "lint": "tsc --noEmit && eslint . --ext .ts --max-warnings=-1",
    "test": "mocha --require ts-node/register --require ./mochaSetup.js './src/**/*.test.ts'",
    "validate": "npm-run-all --parallel test lint",
    "prepare": "husky install && chmod ug+x .husky/*"
  },
  "keywords": [
    "JS",
    "NodeJS",
    "Parcel",
    "Express",
    "PostCSS",
    "ESlint",
    "Web",
    "TypeScript",
    "messenger"
  ],
  "author": "ivees7@yandex.ru",
  "license": "ISC",
  "devDependencies": {
    "@types/mocha": "10.0.0",
    "@types/jsdom": "20.0.0",
    "@types/chai": "4.3.3",
    "@types/proxyquire": "1.3.28",
    "@types/sinon": "10.0.13",
    "@typescript-eslint/eslint-plugin": "5.46.1",
    "@typescript-eslint/parser": "5.46.1",
    "clean-webpack-plugin": "4.0.0",
    "css-loader": "6.7.3",
    "eslint": "8.29.0",
    "eslint-plugin-import": "2.26.0",
    "express": "4.18.2",
    "handlebars": "4.7.7",
    "handlebars-loader": "1.7.3",
    "html-webpack-plugin": "5.5.0",
    "husky": "8.0.1",
    "jsdom": "20.0.1",
    "mocha": "10.0.0",
    "nanoid": "3.3.4",
    "npm-run-all": "4.1.5",
    "proxyquire": "2.1.3",
    "sinon": "14.0.1",
    "mini-css-extract-plugin": "2.7.2",
    "resolve-url-loader": "5.0.0",
    "sass": "1.58.0",
    "sass-loader": "13.2.0",
    "stylelint": "14.16.0",
    "stylelint-config-prettier-scss": "0.0.1",
    "stylelint-config-standard-scss": "6.1.0",
    "stylelint-scss": "4.3.0",
    "ts-loader": "9.4.1",
    "ts-node": "10.9.1",
    "typescript": "4.9.4",
    "webpack": "5.75.0",
    "webpack-cli": "5.0.1",
    "webpack-dev-server": "4.11.1"
  },
  "dependencies": {
    "chai": "4.3.6"
  }
}
