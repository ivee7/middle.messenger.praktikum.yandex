<main class="main-wrapper">
    <div class="main">
        <div class="main__col main__col--side">
            <div class="main__bar">
                {{{ Burger }}}
                <div class="main__search">
                    {{{ Search }}}
                </div>
            </div>
            <ul class="main__chats">
                <li>
                    {{{ ChatItem
                        image='person.svg'
                        name='Андрей'
                        time='12:30'
                        lastMessage='И Human Interface Guidelines и Material Design рекомендует поучаствовать в новом вебинаре от нашей компании'
                        number='3'
                    }}}
                </li>
                <li>
                    {{{ ChatItem
                        image='person.svg'
                        name='Киноклуб'
                        time='Чт'
                        lastMessage='Друзья, у меня для вас особенный выпуск новостей!'
                        number='1'
                    }}}
                </li>
                <li>
                    {{{ ChatItem
                        image='person.svg'
                        name='Вадим'
                        time='20.08.2022'
                        lastMessage='Круто!'
                        outgoing=true
                        active='active'
                    }}}
                </li>
            </ul>
        </div>
        <div class="main__col main__col--main">

            <div class="main__chat">
                <div class="main__chat-bar">
                    <h3 class="main__chat-name">Вадим</h3>
                    <button class="main__chat-menu-btn">
                        <img class="main__chat-menu-btn-icon" src="{{dots}}" alt="dots">
                    </button>
                </div>
                <div class="main__chat-space">
                    <div class="main__chat-col">

                    </div>
                    <div class="main__chat-col main__chat-col--outgoing">
                        {{{ Message text="Круто" time="22:15" outgoing=true }}}
                    </div>
                </div>
                <div class="main__chat-bar main__chat-bar--darken">
                    <label class="main__chat-file-picker">
                        <input type="file">
                    </label>
                    <input class="main__input-typer" type="text" placeholder="Написать сообщение">
                    <button class="main__send-btn">
                        <img class="main__icon-send" src="{{route}}">
                    </button>
                </div>
            </div>

        </div>

        <div class="main__dimmer">
            <nav class="main__nav">
                <div class="main__nav-header">
                    <div class="main__nav-header-img-wrapper">
                        <img class="main__nav-header-img" src="{{person}}">
                    </div>
                </div>
                <ul class="main__nav-list">
                    <li class="main__nav-item">
                        <img class="main__nav-item-img" src="{{person}}">
                        <a class="main__nav-item-link" href="#">Профиль</a>
                    </li>
                    <li class="main__nav-item">
                        <img class="main__nav-item-img" src="{{people}}">
                        <a class="main__nav-item-link" href="#">Создать чат</a>
                    </li>
                    <li class="main__nav-item">
                        <img class="main__nav-item-img" src="{{bin}}">
                        <a class="main__nav-item-link" href="./index.hbs">Выйти</a>
                    </li>
                </ul>
            </nav>
        </div>

    </div>
</main>
