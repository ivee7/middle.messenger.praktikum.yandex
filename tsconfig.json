{
    "ts-node": {
        "files": true
    },
    "compilerOptions": {
        "target": "es5",
        "lib": ["ES2020", "DOM"],
        "outDir": "dist",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
    },
}
